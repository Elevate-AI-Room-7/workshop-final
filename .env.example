# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_MODEL=GPT-4o-mini

# Embedding Configuration
AZURE_OPENAI_EMBEDDING_API_KEY=your_embedding_api_key
AZURE_OPENAI_EMBEDDING_ENDPOINT=https://your-embedding-resource.openai.azure.com
AZURE_OPENAI_EMBED_MODEL=text-embedding-3-small

# Vector Database Selection (pinecone or chromadb)
VECTOR_DB_TYPE=chromadb

# Pinecone Configuration (if VECTOR_DB_TYPE=pinecone)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=travel-agency

# ChromaDB Configuration (if VECTOR_DB_TYPE=chromadb)
CHROMADB_COLLECTION_NAME=travel-agency
CHROMADB_PERSIST_DIR=./chromadb_data

# Weather API Configuration
WEATHER_API_KEY=your_weather_api_key

# SSL Verification Configuration
# Set to False to disable SSL verification for API requests (default: True)
# WARNING: Only disable SSL verification in development environments
VERIFY_SSL=True

# Proxy Configuration (optional)
# Uncomment and set these if you're behind a corporate proxy
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1